/* CSS Document */
@import url("/dialog.css");
@import url("/buttons.css");

@font-face {
	font-family: 'Open Sans';
	font-style: normal;
	font-weight: 300;
	src: local('Open Sans Light'), local('OpenSans-Light'), url(/OpenSans-Light.woff) format('woff');
}

@font-face {
	font-family: 'Open Sans';
	font-style: normal;
	font-weight: 400;
	src: local('Open Sans'), local('OpenSans'), url(/OpenSans.woff) format('woff');
}

@font-face {
	font-family: 'Open Sans';
	font-style: normal;
	font-weight: 700;
	src: local('Open Sans Bold'), local('OpenSans-Bold'), url(/OpenSans-Bold.woff) format('woff');
}

html, body {
	margin:0px;
	padding:0px;
	font-family:'Open Sans',Helvetica,sans-serif;
	font-size:1.05em;
	font-weight:300;
	font-style:normal;
	height:100%;
	width:100%;
	color:#333;
}

h1 {
	font-size: 2.4em;
	font-weight: 300;
	margin: 0 3em;
	text-align:center;
}

#search input {
	width:100%;
}

#search {
	display:block;
	padding:0px 20px 5px 10px;
}

body {
	background-color:#FFF;
}

table.nosey {
	width:100%;
}

table.nosey h2 {
	padding:0px;
	margin:0px;
}

table.nosey .list h2:first-child, .nosey .list h2:last-child {
	color:#ccc;
}

table.nosey .list h2:nth-child(2), table.nosey .list h2:nth-child(4) {
	color:#999;
}

input[type="email"], input[type="number"], 
input[type="password"], input[type="tel"], 
input[type="text"], input[type="url"],
select,
textarea
{
	padding:5px 5px;
	border-width:0px 0px 1px 3px;
	border-style:solid;
	border-color:#DDD;
	outline:none;
	font-size: 1.1em;
}

input[type="email"]:focus, input[type="number"]:focus, 
input[type="password"]:focus, input[type="tel"]:focus, 
input[type="text"]:focus, input[type="url"]:focus,
select:focus,
textarea:focus
{
	border-color:#33AABB;
}

table.fancy tr.error td:last-child, p.error {
	color:#CC3333;
	font-weight:700;
}

table.fancy td, table.fancy th {
	padding:10px;
	vertical-align:top;
}

table.fancy tr td:first-child, table.fancy tr th:first-child {
	width:150px;
	vertical-align:middle;
}

table.fancy tr td:first-child {
	background-color:#CCC;
}

table.fancy tr:nth-child(even) {
	background-color:#CFF;
}

table.fancy tr:nth-child(odd) {
	background-color:#FFF;
}

table.fancy th {
	text-align:center;
	background-color:#33AABB;
	color:#ffffff;
	background-image:url("/overlay.png");
	background-repeat:repeat-x;
	background-position:0% 0%;
	text-shadow: 0 -1px 1px rgba(0, 0, 0, 0.25), -2px 0 1px rgba(0, 0, 0, 0.25);
}

table.fancy {
	max-width:750px;
}

#nav
{
	background-color: #FFFFFF;
	top:0;
	left:0;
	width:80%;
	z-index: 100;
	position:absolute;
	display:none;
	max-width:20em;
}

#menu,
#contacts,
#folders
{
	list-style-image: none;
	list-style-type: none;
	padding: 0;
	margin: 0;
}

.menu #nav {
	display:block;
}

#menu a,
#contacts a,
#folders a {
	padding: 5px 10px;
	text-decoration:none;
	border-radius: 1px;
	display:inline-block;
	width:100%;
	color:#333;
	outline:none;
	white-space:nowrap;
	position:relative;
	border-left:3px solid #FFF;
	border-bottom:1px solid #FFF;;
}

#menu li,
#contacts li,
#folders li {
	margin: 0;
	overflow: hidden;
	padding: 0 30px 0 0;}

#menu a:hover,
#contacts a:hover,
#folders a:hover {
	background-color:#ddd;
}

#menu a:focus,
#contacts a:focus,
#folders a:focus {
	color:#33AABB;
	font-weight:700;
	border-color:#33AABB;
}

#folders ul {
    list-style-image: none;
    list-style-type: none;
    padding:0px 10px;
	display:none;
}

#menu a.selected,
#contacts a.selected,
#folders a.selected {
	color:#FF8800;
	font-weight:700;
	border-color:#FF8800;
}

#folders ul.expand,
/* remove this to allow collapsing of root folders */
#folders > li > ul
{
	display:block;
}

#mail {
	border-spacing: 0;
	z-index:99;
	max-width:none;
	overflow:hidden;
}

#mail a {
	border-bottom:1px solid #CCCCCC;
	border-left:3px solid #CCCCCC;
	padding:0 0 0.7em 0;
	white-space:nowrap;
	background-color:#eee;
	position:relative;
	display:block;
	font-size:0.9em;
	height:2em;
	background-color:#fff;
	outline:none;
}

#mail a.selected {
	border-color:#33AABB;
}

#mail .unseen {
	background-color:#fff;
	font-weight:700;
}

#mail a span:first-child {
	width:2px;
}

#mail a:hover {
	border-color:#FF8800;
}

#mail span {
	white-space:nowrap;
	padding:2px;
	overflow:hidden;
	text-decoration:none;
	color:#333;
	outline:none;
	display:inline-block;
	max-width:100%;
}

#mail a span:nth-child(2) {
	width:60%;
	position:absolute;
	bottom:0px;
	font-size:0.8em;
}

#mail a span:nth-child(4) {
	max-width:22%;
	position:absolute;
	right:0px;
	bottom:0px;
	font-size:0.8em;
}

#menubar {
	position:fixed;
	z-index:1000;
	width:100%;
	top:0px;
	white-space:nowrap;
	border-bottom:1px solid #CCCCCC;
	box-shadow: 0 0 5px rgba(0, 0, 0, 0.15);
	background-color:#fff;
	left:0px;
	font-size:0.7em;
}

.menu {
	overflow-x:hidden;
}

.menu #menubar {
	box-shadow:none;
	left:inherit;
}

#content
{
	position:relative;
	min-height: 100%;
	z-index:999;
	background-color:#ffffff;
}

.menu #content
{
	left:70%;
	right:-70%;
}

.menu #content
{
	box-shadow: -5px 0 5px rgba(0, 0, 0, 0.1);
	margin:0px;
	overflow:hidden;
	height:100%;
	position:fixed;
}

.message {
	position:fixed;
	bottom:0px;
	right:0px;
	border:0px;
	height:500px;
	width:600px;
	background-color:#fff;
	z-index:1000;
	border-radius: 1px;
	padding:0px;
	margin:10px;
	table-layout:fixed;
	border-spacing:0px;
	border-collapse:separate;
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.5);
}

.message.collapsed {
	height:24px;
	width:200px;
}

.message.collapsed tr {
	display:none;
}

.message.collapsed thead tr:first-child {
	display:table-row;
}

.message th {
	border-left:1px solid #ccc;
	border-right:1px solid #ccc;
	border-bottom:1px solid #ccc;
	padding: 5px 5px;
	text-align:left;
	overflow:hidden;
	font-weight:300;
	vertical-align:middle;
	height:1px;
}

.message.compose th {
	padding:0px 16px 0px 0px;
}

.message.compose tr:nth-child(2) th:last-child {
	border-left:0px;
}

.message.compose tr:nth-child(2) th:first-child {
	border-right:0px;
}

.message.compose tr:nth-child(2) th {
	padding:0px;
}

.message thead tr:first-child th {
	padding:0px 5px;
}

.message.compose tbody td {
	padding:0px;
}

.message a[href="#max-message"]
{
	color:#fff;
	text-decoration:none;
	padding:5px 10px;
	display:block;
}

.message a[href="#max-message"] span {
	font-weight:700;
	margin:0px 5px 0px 0px;
}

.message thead tr:first-child th:first-child {
	border-left:1px solid #333;
	width:30px;
	overflow:hidden;
	padding:5px;
}

.message.compose.collapsed thead tr:first-child th:last-child {
	width:0px;
	padding:0px;
}

.message.compose thead tr:first-child th:last-child {
	width:140px;
	text-align:right;
}

.message thead tr:first-child th:last-child {
	border-right:1px solid #333;
	position:relative;
	width: 26px;
}

.message thead tr:first-child div {
	margin: 1px;
	overflow: hidden;
	position: absolute;
	right: 5px;
	text-align: right;
	top: 5px;
	width: 28px;
}

.message a[href="#reply-all"],
.message a[href="#forward"] {
	display:none;
}

.message .hover {
	width:120px !important;
	text-align:right;
}

.message .hover a {
	display:inline-block;
}

.message thead tr:first-child th {
	border-bottom:1px solid #333;
	border-top:1px solid #333;
	background-color:#333;
	background-image:url("/overlay.png");
	background-repeat:repeat-x;
	background-position:0% 0%;
	color:#FFFFFF;
	text-shadow: 0 -1px 1px rgba(0, 0, 0, 0.25), -2px 0 1px rgba(0, 0, 0, 0.25);
	text-decoration:none;
	white-space:nowrap;
	border-left:0px;
	border-right:0px;
	overflow:hidden;
}

.message tbody td {
	border-left:1px solid #ccc;
	border-right:1px solid #ccc;
	border-bottom:1px solid #ccc;
	padding:5px;
}

.message iframe {
    border: 0 none;
    height: 100%;
    padding: 0;
    width: 100%;
}

#attachments .part {
	width:570px;
	word-wrap:break-word;
}

#attachments pre {
	white-space:pre-wrap;
	font-size:.95em;
	word-wrap:break-word;
}

.message .attachments .decrypting {
	float:left;
	display:inline-block;
	position:relative;
	width:100%;
	overflow:hidden;
}

#paging {
	position:absolute;
}

#keys .loading,
#folders .loading,
#menubar .loading,
.message .loading {
	background-color: #FF8800;
	bottom: 0px;
	display: inline-block;
	height: 2px;
	left: 0px;
	line-height: 1px;
	position: absolute;
	width: 50px;
}

.message .verify-failed {
	padding:0px;
}

.message .verify-failed div {
    border-color: #FF3311;
    border-style: solid;
    border-width: 0px 0px 1px 3px;
	padding:5px;
}

.compose .subject,
.compose .recipients {
	width:100%;
}

.compose .jqte {
	margin:0px !important;
	box-shadow:none !important;
	border-radius:0px;
	position:relative;
	border:0px !important;
}

.compose .jqte.checked .jqte_toolbar {
	display:block;
}

.compose .jqte_focused {
	outline: medium none !important;
}

.compose .jqte_focused .jqte_editor
{
	box-shadow: none !important;
	border-color:#33AABB;
}

.compose .jqte_toolbar {
	display:none;
	border-color: #BBBB33;
	border-style: solid;
	border-width: 0px 0px 1px 3px;
	padding:1px;
}

.compose .jqte_editor {
	padding:5px;
	resize:none;
	border-width:0px 0px 1px 3px;
	border-style:solid;
	border-color:#DDD;
}

.compose select {
	width:100%;
}

.compose .jqte_tool_20,
.compose .jqte_tool_21
{
	display:none;
}





