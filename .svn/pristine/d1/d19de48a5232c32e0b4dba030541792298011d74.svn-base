
function doWork(data)
{
	$.ajax.post({
		url: '/mail.php', 
		dataType: 'text/json',
		data: {
			user: data.user,
			path: data.path,
			id: data.id,
			access: data.access
		},
		success:function (data) {
			$.send(data.json);
			$.send({_status: 'done'});
		},
		error:function (data) {
			$.send(data);
			$.send({_status: 'done'});
		}
	});
}

